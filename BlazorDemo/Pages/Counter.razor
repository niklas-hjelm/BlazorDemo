@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<p>
    <input @bind="Count"/>
</p>

<button class="btn btn-primary" @onclick="ApplyCount">Apply Count</button>

<button class="btn btn-primary" @onclick="IncrementCount">Count Up</button>

<button class="btn btn-success" @onclick="DecreaseCount">Count Down</button>

@code {
    private int currentCount = 0;

    private int _count;

    public int Count
    {
        get { return _count; }
        set { _count = value; }
    }

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecreaseCount()
    {
        currentCount--;
    }

    private void ApplyCount()
    {
        currentCount += Count;
    }

}
